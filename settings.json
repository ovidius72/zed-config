// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "outline_panel": {
    "dock": "right"
  },
  "language_models": {
    "ollama": {
      "api_url": "http://localhost:11434"
    }
  },
  "remove_trailing_whitespace_on_save": false,
  "session": {
    "restore_unsaved_buffers": true
  },
  "tab_bar": {
    "show": true,
    "show_nav_history_buttons": true
  },
  "cursor_shape": "hollow",
  "indent_guides": {
    "background_coloring": "indent_aware",
    "active_line_width": 4,
    "coloring": "indent_aware",
    "line_width": 3
  },
  "tabs": {
    "file_icons": true,
    "git_status": true,
    "close_position": "left"
  },
  // "preview_tabs": { "enable_preview_from_code_navigation": true },
  "seed_search_query_from_cursor": "always",
  "show_signature_help_after_edits": true,
  "auto_update_extensions": {
    "markdown-oxide": false,
    "emmet": true,
    "enabled": true
  },
  "use_auto_surround": true,
  "use_autoclose": true,
  "show_inline_completions": true,
  "show_wrap_guides": true,
  "show_call_status_icon": true,
  "current_line_highlight": "line",
  "cursor_blink": true,
  "always_treat_brackets_as_autoclosed": true,
  // "features": {
  //   "inline_completion_provider": "none"
  // },
  // "ui_font_family": "Maple Mono",
  "ui_font_size": 17,
  // "buffer_font_features": {},
  "buffer_font_family": "Maple Mono",
  "confirm_quit": true,
  "auto_update": true,
  "code_actions_on_format": {
    "source.organizeImports": true
  },
  "terminal": {
    "font_family": "JetBrainsMono Nerd Font",
    "dock": "bottom",
    "working_directory": "current_project_directory",
    "default_height": 1000,
    "copy_on_select": true,
    "cursor_shape": "block",
    "line_height": "standard"
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "diagnostics": {
    "include_warnings": true
  },
  "theme": "Ros√© Pine Dawn",
  "experimental.theme_overrides": {
    // "background": "#FDF6E3",
    // "editor.background": "#FDF6E3",
    "syntax": {
      // "variable": { "font_style": "italic" },
      "keyword": { "font_style": "italic" },
      "comment": { "font_style": "italic" }
    }
  },
  "vim_mode": true,
  "vim": {
    "use_multiline_find": true,
    "toggle_relative_line_numbers": true,
    "use_smartcase_find": true,
    "use_system_clipboard": "never"
  },
  "relative_line_numbers": true,
  "buffer_font_size": 16,
  "git": {
    "gutter_debounce": 200,
    "git_gutter": "tracked_files",
    "inline_blame": {
      "enabled": true,
      "delay_ms": 500
    }
  },
  "show_whitespaces": "boundary",
  // "scrollbar": {
  // "show": "never"
  // },
  "tab_size": 2,
  "assistant": {
    "version": "2",
    "provider": null,
    // "provider": {
    "default_model": {
      "provider": "ollama",
      "model": "codellama:34b"
    },
    "name": "ollama",
    // Recommended setting to allow for model startup
    "low_speed_timeout_in_seconds": null
  },
  "project_panel": {
    "auto_fold_dirs": false,
    "auto_reveal_entries": true,
    "show_hidden_files": true
  },
  "formatter": "auto",
  // "formatter": {
  //   "external": {
  //     "arguments": ["--stdin-filepath", "{buffer_path}"],
  //     "command": "./node_modules/.bin/prettier"
  //   }
  // },
  "inlay_hints": {
    "enabled": false,
    "show_other_hints": true,
    "show_parameter_hints": true,
    "show_type_hints": true
  },
  "semantic_index": {
    "enabled": true
  },
  "journal": {
    "path": "/Users/antonio/Library/CloudStorage/Dropbox/zed-journal",
    "hour_format": "hour24"
  },
  // "copilot": {
  //   "enabled": true
  // },
  "languages": {
    "TSX": {
      "code_actions_on_format": {
        "source.organizeImports": true
      },
      "format_on_save": {
        "code_actions": {
          "source.organizeImports": true
        }
      }
    }
  },
  "TypeScript": {
    "code_actions_on_format": {
      "source.organizeImports": true
    },
    "format_on_save": {
      "code_actions": {
        "source.organizeImports": true
      }
    }
  },
  // "JavaScript": {
  //   "formatter": {
  //     "external": {
  //       "command": "prettier",
  //       "command": ["--stdin-filepath", "{buffer_path}"]
  //     }
  //   }
  // }
  "lsp": {
    "scls": {
      // simple completion language server.
      "initialization_options": {
        "max_completion_items": 6, // set max completion results len for each group: words, snippets, unicode-input
        "feature_words": true, // enable completion by word
        "feature_unicode_input": true, // enable "unicode input"
        "snippets_first": true, // completions will return before snippets by default
        "feature_snippets": true, // enable snippets
        "feature_paths": true // enable path completion
      }
    },
    "eslint": {
      "settings": {
        "codeActionOnSave": {
          "rules": ["import/order"]
        }
      }
    }
    // "typescript-language-server": {
    //   "initialization_options": {
    //     "preferences": {
    //       "includeinlayparameternamehints": "all",
    //       "includeinlayparameternamehintswhenargumentmatchesname": true,
    //       "includeinlayfunctionparametertypehints": true,
    //       "includeinlayvariabletypehints": true,
    //       "includeinlayvariabletypehintswhentypematchesname": false,
    //       "includeinlaypropertydeclarationtypehints": true,
    //       "includeinlayfunctionlikereturntypehints": true,
    //       "includeinlayenummembervaluehints": true
    //     }
    //   }
    // }
  }
}
